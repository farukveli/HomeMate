<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity4"
    android:background="@drawable/loginbckg">

    <TextView
        android:id="@+id/title"
        android:layout_width="322dp"
        android:layout_height="79dp"
        android:fontFamily="@font/ubuntu"
        android:padding="8dp"
        android:text="HomeMate"
        android:textAlignment="textStart"
        android:textColor="@color/golden_rod"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="384dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553"
        tools:context=".RegisterActivity4">

        <TextView
            android:id="@+id/statusText_register4"
            android:layout_width="370dp"
            android:layout_height="25dp"
            android:text="Status"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/ubuntu_light"
            android:textColor="@color/dark_strong_blue"
            android:background="@color/white"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"/>


        <Spinner
            android:id="@+id/status_editLocation"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"/>

        <TextView
            android:id="@+id/maxStayTimeText_register4"
            android:layout_width="370dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:text="Max Stay Time"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/ubuntu_light"
            android:textColor="@color/dark_strong_blue"
            android:background="@color/white"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/day_editLocation"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:backgroundTint="@color/material_on_primary_emphasis_medium"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                tools:ignore="InvalidId" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:background="@color/dark_strong_blue"
                android:backgroundTint="@color/material_on_primary_disabled" />
            <Spinner
                android:id="@+id/time_editLocation"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:backgroundTint="@color/material_on_primary_emphasis_medium" />


        </LinearLayout>



        <TextView
            android:id="@+id/distanceText_register4"
            android:layout_width="370dp"
            android:layout_height="25dp"
            android:text="Distance to Campus"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/ubuntu_light"
            android:textColor="@color/dark_strong_blue"
            android:background="@color/white"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/disatanceText_editLocation"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:backgroundTint="@color/material_on_primary_emphasis_medium"
                android:fontFamily="@font/ubuntu_medium"
                android:textAlignment="center"
                android:textColor="@color/dark_strong_blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/findLocation_editLocation"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:fontFamily="@font/ubuntu_medium"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:text="Use Your Location for Your Home's Distance"/>


        </LinearLayout>

        <Button
            android:id="@+id/save_editLocation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/ubuntu"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="30dp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/ytu_logo"
        android:layout_width="137dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164"
        app:srcCompat="@drawable/yeni_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>
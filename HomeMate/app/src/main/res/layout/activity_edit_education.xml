<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity3"
    android:background="@drawable/loginbckg">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="384dp"
        android:layout_height="500dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553"
        tools:context=".LoginActivity">


        <TextView
            android:id="@+id/facultyText_editEducation"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/white"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"
            android:fontFamily="@font/ubuntu_light"
            android:text="Faculty"
            android:textAlignment="center"
            android:textColor="@color/dark_strong_blue"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/faculty_editEducation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:background="@color/white"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"/>

        <TextView
            android:id="@+id/departmentText_editEducation"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"
            android:fontFamily="@font/ubuntu_light"
            android:text="Department"
            android:textAlignment="center"
            android:textColor="@color/dark_strong_blue"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/department_editEducation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:background="@color/white"
            android:backgroundTint="@color/material_on_primary_emphasis_medium" />
        <TextView
            android:id="@+id/gradeText_editEducation"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/material_on_primary_emphasis_medium"
            android:fontFamily="@font/ubuntu_light"
            android:text="Grade"
            android:textAlignment="center"
            android:textColor="@color/dark_strong_blue"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/grade_editEducation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textAlignment="center"
            android:backgroundTint="@color/material_on_primary_emphasis_medium" />

        <Button
            android:id="@+id/save_editEducation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/ubuntu"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="30dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>